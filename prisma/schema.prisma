generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Products {
  id        String   @id @default(uuid())
  name      String   @unique
  quantity  Int
  category  String
  price     Float
  owner     String
  createdAt DateTime @default(now())
  sales     Sales[]
}

model Sales {
  id        String   @id @default(uuid())
  productId String
  product   Products @relation(fields: [productId], references: [id])
  owner    String
  quantity Int
  price    Float
  type     String // "sale", "unsale", etc.
  createdAt   DateTime @default(now())
}
